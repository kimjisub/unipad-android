<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>

		<import type="android.view.View" />

		<variable
			name="data"
			type="com.kimjisub.design.panel.MainPackPanel.Data" />
	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/border_panel_pack"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"
				android:paddingRight="8dp">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_alignParentLeft="true">


					<ImageView
						android:id="@+id/IV_bookmark"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:background="@drawable/border_icon"
						android:padding="4dp"
						app:imgRes="@{data.bookmark ? @drawable/ic_bookmark_24dp : @drawable/ic_bookmark_border_24dp}" />

				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_alignParentRight="true">

					<ImageView
						android:id="@+id/IV_edit"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:background="@drawable/border_icon"
						android:padding="4dp"
						android:visibility="gone"
						app:srcCompat="@drawable/ic_edit_24dp" />

					<ImageView
						android:id="@+id/IV_storage"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:background="@drawable/border_icon"
						android:padding="4dp"
						android:clickable="@{!data.moving}"
						app:imgRes="@{data.moving ? @drawable/ic_copy_24dp : (data.storage? @drawable/ic_public_24dp: @drawable/ic_lock_24dp)}" />
				</LinearLayout>

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				android:paddingBottom="16dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">

					<TextView
						android:id="@+id/TV_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:ellipsize="marquee"
						android:focusable="true"
						android:marqueeRepeatLimit="marquee_forever"
						android:singleLine="true"
						android:text="@{data.title}"
						android:textSize="25dp" />

					<TextView
						android:id="@+id/TV_subtitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:ellipsize="marquee"
						android:focusable="true"
						android:marqueeRepeatLimit="marquee_forever"
						android:singleLine="true"
						android:text="@{data.subtitle}"
						android:textSize="15dp" />

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:orientation="horizontal"
						android:paddingTop="16dp">

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="right"
							android:orientation="vertical">


							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/MPP_padSize" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/MPP_chainCount" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/MPP_soundCount" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/MPP_ledCount" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/MPP_fileSize" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/MPT_playCount" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/MPP_padTouchCount"
								android:visibility="gone" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/MPP_lastPlayed"/>

						</LinearLayout>

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="left"
							android:orientation="vertical"
							android:paddingLeft="32dp">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@{data.padSize}" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@{data.chainCount}" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@{data.soundCount}" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@{data.ledCount}" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@{data.fileSize}" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@{data.playCount}" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@{data.padTouchCount}"
								android:visibility="gone" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@{data.lastPlayed != null ? @string/date_format(data.lastPlayed) : @string/MPP_notPlayedYet}" />

						</LinearLayout>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:orientation="vertical">

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentLeft="true"
							android:orientation="horizontal">

							<ImageView
								android:id="@+id/IV_youtube"
								android:layout_width="40dp"
								android:layout_height="40dp"
								android:background="@drawable/border_icon"
								android:padding="4dp"
								app:srcCompat="@drawable/ic_youtube_24dp" />

							<ImageView
								android:id="@+id/IV_website"
								android:layout_width="40dp"
								android:layout_height="40dp"
								android:background="@drawable/border_icon"
								android:padding="4dp"
								android:visibility="@{data.websiteExist ? View.VISIBLE : View.INVISIBLE}"
								app:srcCompat="@drawable/ic_web_24dp" />
						</LinearLayout>

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentRight="true"
							android:orientation="horizontal">

							<ImageView
								android:id="@+id/IV_func"
								android:layout_width="40dp"
								android:layout_height="40dp"
								android:background="@drawable/border_icon"
								android:padding="4dp"
								app:srcCompat="@drawable/ic_edit_24dp" />

							<ImageView
								android:id="@+id/IV_delete"
								android:layout_width="40dp"
								android:layout_height="40dp"
								android:background="@drawable/border_icon"
								android:padding="4dp"
								app:srcCompat="@drawable/ic_delete_24dp" />
						</LinearLayout>


					</RelativeLayout>

					<TextView
						android:id="@+id/IV_path"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:ellipsize="marquee"
						android:focusable="true"
						android:marqueeRepeatLimit="marquee_forever"
						android:singleLine="true"
						android:text="@{data.path}"
						android:textSize="10dp" />

				</LinearLayout>

			</RelativeLayout>

		</LinearLayout>

	</LinearLayout>
</layout>