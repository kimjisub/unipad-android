<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

	<data>

		<import type="com.kimjisub.design.R.color" />

		<variable
			name="data"
			type="com.kimjisub.design.panel.MainTotalPanel.Data" />

	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/border_panel_total"
			android:padding="16dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:orientation="vertical">

				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:orientation="horizontal"
					android:paddingTop="8dp">

					<ImageView
						android:layout_width="130dp"
						android:src="@{data.logo}"
						android:layout_height="50dp"
						android:scaleType="centerInside" />

					<TextView
						android:layout_width="130dp"
						android:layout_height="50dp"
						android:gravity="bottom|right"
						android:paddingLeft="8dp"
						android:text="@{data.version}"
						android:textColor="@{data.premium ? color.orange : color.text}"
						android:textSize="10dp" />

				</RelativeLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginTop="64dp"
					android:layout_marginBottom="64dp"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="right"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/unipack_count"
							android:textColor="@color/text" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/unipack_capacity"
							android:textColor="@color/text" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/open_count"
							android:textColor="@color/text" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/padtouch_count"
							android:textColor="@color/text"
							android:visibility="gone" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/selected_theme"
							android:textColor="@color/text" />

					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="left"
						android:orientation="vertical"
						android:paddingLeft="32dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@{data.unipackCount}"
							android:textColor="@color/text" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@{data.unipackCapacity}"
							android:textColor="@color/text" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@{data.openCount}"
							android:textColor="@color/text" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@{data.padTouchCount}"
							android:visibility="gone" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@{data.selectedTheme}"
							android:textColor="@color/text" />

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

		</RelativeLayout>

	</LinearLayout>
</layout>