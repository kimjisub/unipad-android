<?xml version="1.0" encoding="utf-8"?>
<layout>

	<data>

		<variable
			name="viewModel"
			type="com.kimjisub.launchpad.fragment.MainTotalPanelViewModel" />

	</data>

	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".fragment.MainTotalPanelFragment">

		<LinearLayout
			android:id="@+id/rootView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/border_panel_total"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:padding="16dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:orientation="vertical">

					<RelativeLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:orientation="horizontal"
						android:paddingTop="8dp">

						<ImageView
							android:layout_width="130dp"
							android:layout_height="50dp"
							android:src="@drawable/custom_logo"
							android:scaleType="centerInside" />
<!--						android:src="@{data.logo}"-->

						<TextView
							android:layout_width="130dp"
							android:layout_height="50dp"
							android:gravity="bottom|end"
							android:paddingStart="8dp"
							android:paddingLeft="8dp"
							android:text="@{viewModel.version}"
							android:textSize="10dp" />
<!--						android:textColor="@{data.premium ? @color/orange : @color/text}"-->

					</RelativeLayout>

					<androidx.appcompat.widget.AppCompatSpinner
						android:id="@+id/themeSpinner"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:theme="@style/UniPadSpinner" />
<!--					android:entries="@{data.themeList}"-->
<!--					android:selectedItemPosition="@{data.selectedTheme}"-->

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="#f5f5f5"
						android:orientation="horizontal">

						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_margin="8dp"
							android:layout_weight="1"
							android:orientation="vertical">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:text="@string/MPT_playCount"
								android:textColor="@color/wb2"
								android:textSize="@dimen/text_small" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:paddingTop="8dp"
								android:singleLine="true"
								android:textSize="@dimen/text_17"
								android:textStyle="bold" />
<!--							android:text="@{data.openCount}"-->
						</LinearLayout>

						<View
							android:layout_width="1dp"
							android:layout_height="match_parent"
							android:layout_marginTop="8dp"
							android:layout_marginBottom="8dp"
							android:background="@color/wb2" />

						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_margin="8dp"
							android:layout_weight="1"
							android:orientation="vertical">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:text="@string/MTP_count"
								android:textColor="@color/wb2"
								android:textSize="@dimen/text_small" />

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:paddingTop="8dp"
								android:singleLine="true"
								android:textSize="@dimen/text_17"
								android:textStyle="bold"
								tools:text="123" />
<!--							android:text="@{data.unipackCount}"-->
						</LinearLayout>

						<View
							android:layout_width="1dp"
							android:layout_height="match_parent"
							android:layout_marginTop="8dp"
							android:layout_marginBottom="8dp"
							android:background="@color/wb2" />

						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_margin="8dp"
							android:layout_weight="1"
							android:orientation="vertical">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:text="@string/MTP_size"
								android:textColor="@color/wb2"
								android:textSize="@dimen/text_small" />

							<androidx.constraintlayout.widget.ConstraintLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:orientation="horizontal"
								android:paddingTop="8dp">

								<TextView
									android:id="@+id/capacity"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:singleLine="true"
									android:textSize="@dimen/text_17"
									android:textStyle="bold"
									app:layout_constraintLeft_toLeftOf="parent"
									app:layout_constraintTop_toTopOf="parent" />
<!--								android:text="@{data.unipackCapacity}"-->

								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_gravity="bottom"
									android:text="@string/mb"
									android:textSize="@dimen/text_small"
									android:textStyle="bold"
									app:layout_constraintBaseline_toBaselineOf="@+id/capacity"
									app:layout_constraintLeft_toRightOf="@+id/capacity" />

							</androidx.constraintlayout.widget.ConstraintLayout>
						</LinearLayout>
					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:gravity="center"
						android:orientation="horizontal">

						<com.polyak.iconswitch.IconSwitch
							android:id="@+id/sort_order"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							app:isw_icon_left="@drawable/ic_sort_asc"
							app:isw_icon_right="@drawable/ic_sort_desc" />

						<androidx.appcompat.widget.AppCompatSpinner
							android:id="@+id/spinner_sort_method"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:entries="@array/packSortMethod"
							android:theme="@style/UniPadSpinner" />

					</LinearLayout>


				</LinearLayout>


			</RelativeLayout>

			<com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
				android:id="@+id/adView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				ads:adSize="BANNER"
				ads:adUnitId="@string/admob_main_panel" />

		</LinearLayout>

	</FrameLayout>
</layout>