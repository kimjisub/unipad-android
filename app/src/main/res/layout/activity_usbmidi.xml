<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/dark1"
	android:orientation="vertical">

	<TextView
		android:id="@+id/info"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:textColor="@color/text1"
		android:textSize="10dp" />

	<LinearLayout
		android:id="@+id/linearLayout2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="10dp"
			android:gravity="center"
			android:text="@string/launchpadConnecting"
			android:textColor="@color/text1"
			android:textSize="30dp" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/s"
				android:layout_width="120dp"
				android:layout_height="100dp"
				android:layout_gravity="center_horizontal"
				android:gravity="center"
				android:onClick="selectDeviceXml"
				android:tag="0"
				android:text="S\nmini"
				android:textColor="@color/text1"
				android:textSize="30dp" />

			<TextView
				android:id="@+id/mk2"
				android:layout_width="120dp"
				android:layout_height="100dp"
				android:layout_gravity="center_horizontal"
				android:gravity="center"
				android:onClick="selectDeviceXml"
				android:tag="1"
				android:text="MK2"
				android:textColor="@color/text1"
				android:textSize="30dp" />

			<LinearLayout
				android:id="@+id/pro"
				android:layout_width="120dp"
				android:layout_height="100dp"
				android:gravity="center"
				android:onClick="selectDeviceXml"
				android:orientation="vertical"
				android:tag="2">

				<TextView
					android:id="@+id/pro1"
					android:layout_width="120dp"
					android:layout_height="50dp"
					android:layout_gravity="center_horizontal"
					android:gravity="center"
					android:text="Pro"
					android:textColor="@color/text1"
					android:textSize="30dp" />

				<TextView
					android:id="@+id/pro2"
					android:layout_width="120dp"
					android:layout_height="20dp"
					android:layout_gravity="center_horizontal"
					android:gravity="center"
					android:text="(Live mode)"
					android:textColor="@color/text1"
					android:textSize="15dp" />

			</LinearLayout>

			<TextView
				android:id="@+id/piano"
				android:layout_width="120dp"
				android:layout_height="100dp"
				android:layout_gravity="center_horizontal"
				android:gravity="center"
				android:onClick="selectDeviceXml"
				android:tag="3"
				android:text="piano"
				android:textColor="@color/text1"
				android:textSize="30dp" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_margin="10dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/speedFirst"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:onClick="selectModeXml"
			android:padding="10dp"
			android:tag="0"
			android:text="@string/signal_SpeedFirst"
			android:textColor="@color/text1"
			android:textSize="15dp" />

		<TextView
			android:id="@+id/avoidAfterimage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:onClick="selectModeXml"
			android:padding="10dp"
			android:tag="1"
			android:text="@string/signal_avoidAfterimage"
			android:textColor="@color/text1"
			android:textSize="15dp" />

	</LinearLayout>

</RelativeLayout>