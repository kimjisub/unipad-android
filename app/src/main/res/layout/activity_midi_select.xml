<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tool="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/background1"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="10dp"
				android:gravity="center"
				android:text="@string/launchpadConnecting"
				android:textColor="@color/ugray1"
				android:textSize="30dp" />

			<com.aigestudio.wheelpicker.WheelPicker
				android:id="@+id/picker"
				app:wheel_item_text_size="60dp"
				app:wheel_item_text_color="#a7a7db"
				app:wheel_selected_item_text_color="#536d8a"
				app:wheel_curtain="true"
				app:wheel_curved="true"
				app:wheel_atmospheric="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:layout_margin="10dp"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/BTN_speedFirst"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:onClick="selectModeXml"
				android:orientation="vertical"
				android:tag="0">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:padding="10dp"
					android:text="@string/signal_SpeedFirst"
					android:textColor="@color/ugray1"
					android:textSize="15dp" />


			</LinearLayout>

			<LinearLayout
				android:id="@+id/BTN_avoidAfterimage"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:onClick="selectModeXml"
				android:orientation="vertical"
				android:tag="1">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:padding="10dp"
					android:text="@string/signal_avoidAfterimage"
					android:textColor="@color/ugray1"
					android:textSize="15dp" />


			</LinearLayout>

		</LinearLayout>

		<RelativeLayout
			android:id="@+id/RL_err"
			android:visibility="gone"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/background1"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"
				android:layout_marginBottom="10dp"
				android:gravity="center"
				android:text="@string/midiDevicesNotDetected"
				android:textColor="@color/ugray1"
				android:textSize="30dp" />
		</RelativeLayout>



		<TextView
			android:id="@+id/TV_log"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			tool:text="Log\nLog"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:textColor="@color/ugray1"
			android:textSize="10dp" />

	</RelativeLayout>
</layout>