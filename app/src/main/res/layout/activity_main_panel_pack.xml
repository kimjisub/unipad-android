<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/border_settings"
		android:padding="16dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:id="@+id/panel_pack_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="marquee"
				android:focusable="true"
				android:marqueeRepeatLimit="marquee_forever"
				android:singleLine="true"
				android:text="UniPack Title"
				android:textSize="25dp" />

			<TextView
				android:id="@+id/panel_pack_subTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="marquee"
				android:focusable="true"
				android:marqueeRepeatLimit="marquee_forever"
				android:singleLine="true"
				android:text="UniPack subTitle"
				android:textSize="15dp" />

			<LinearLayout
				android:paddingTop="32dp"
				android:layout_width="wrap_content"
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">


					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/scale" />
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/chainCount" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/fileSize" />

				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="64dp"
					android:orientation="vertical">

					<TextView
						android:id="@+id/panel_pack_scale"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0" />


					<TextView
						android:id="@+id/panel_pack_chainCount"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0" />

					<TextView
						android:id="@+id/panel_pack_openCount"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0" />

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<TextView
			android:id="@+id/panel_pack_path"
			android:layout_width="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_height="wrap_content"
			android:ellipsize="marquee"
			android:focusable="true"
			android:marqueeRepeatLimit="marquee_forever"
			android:singleLine="true"
			android:text="/storage/0/Unipad/" />

	</RelativeLayout>

</LinearLayout>