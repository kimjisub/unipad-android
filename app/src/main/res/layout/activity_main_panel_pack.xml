<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/border_panel_pack"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingTop="8dp"
			android:paddingRight="8dp">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true">

				<ImageView
					android:id="@+id/panel_pack_star"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:background="@drawable/border_icon"
					android:padding="4dp"
					android:visibility="gone"
					app:srcCompat="@drawable/ic_star_border_24dp" />

				<ImageView
					android:id="@+id/panel_pack_bookmark"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:background="@drawable/border_icon"
					android:padding="4dp"
					app:srcCompat="@drawable/ic_bookmark_border_24dp" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true">

				<ImageView
					android:id="@+id/panel_pack_edit"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:background="@drawable/border_icon"
					android:padding="4dp"
					android:visibility="gone"
					app:srcCompat="@drawable/ic_edit_24dp" />

				<ImageView
					android:id="@+id/panel_pack_storage"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:background="@drawable/border_icon"
					android:padding="4dp"
					app:srcCompat="@drawable/ic_lock_open_24dp" />

			</LinearLayout>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:paddingBottom="16dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<TextView
					android:id="@+id/panel_pack_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:ellipsize="marquee"
					android:focusable="true"
					android:marqueeRepeatLimit="marquee_forever"
					android:singleLine="true"
					android:text="UniPack Title"
					android:textSize="25dp" />

				<TextView
					android:id="@+id/panel_pack_subTitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:ellipsize="marquee"
					android:focusable="true"
					android:marqueeRepeatLimit="marquee_forever"
					android:singleLine="true"
					android:text="UniPack subTitle"
					android:textSize="15dp" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:orientation="horizontal"
					android:paddingTop="16dp">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="right"
						android:orientation="vertical">


						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/scale" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/chainCount" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/sound_count" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/LED_count" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/fileSize" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/open_count" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/padtouch_count"
							android:visibility="gone" />

					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="left"
						android:orientation="vertical"
						android:paddingLeft="32dp">

						<TextView
							android:id="@+id/panel_pack_scale"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0" />


						<TextView
							android:id="@+id/panel_pack_chainCount"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0" />

						<TextView
							android:id="@+id/panel_pack_soundCount"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0" />

						<TextView
							android:id="@+id/panel_pack_ledCount"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0" />

						<TextView
							android:id="@+id/panel_pack_fileSize"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="88.88 MB"
							android:visibility="invisible" />

						<TextView
							android:id="@+id/panel_pack_openCount"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0" />

						<TextView
							android:id="@+id/panel_pack_padTouchCount"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0"
							android:visibility="gone" />

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:orientation="vertical">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:orientation="horizontal">

						<ImageView
							android:id="@+id/panel_pack_youtube"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:background="@drawable/border_icon"
							android:padding="4dp"
							app:srcCompat="@drawable/ic_youtube_24dp" />

						<ImageView
							android:id="@+id/panel_pack_website"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:background="@drawable/border_icon"
							android:padding="4dp"
							app:srcCompat="@drawable/ic_web_24dp" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:orientation="horizontal">

						<ImageView
							android:id="@+id/panel_pack_func"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:background="@drawable/border_icon"
							android:padding="4dp"
							app:srcCompat="@drawable/ic_edit_24dp" />

						<ImageView
							android:id="@+id/panel_pack_delete"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:background="@drawable/border_icon"
							android:padding="4dp"
							app:srcCompat="@drawable/ic_delete_24dp" />
					</LinearLayout>


				</RelativeLayout>

				<TextView
					android:id="@+id/panel_pack_path"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:ellipsize="marquee"
					android:focusable="true"
					android:marqueeRepeatLimit="marquee_forever"
					android:singleLine="true"
					android:text="/storage/0/Unipad/"
					android:textSize="10dp" />

			</LinearLayout>

		</RelativeLayout>

	</LinearLayout>

</LinearLayout>