<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/border_settings"
		android:padding="16dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<ImageView
					android:id="@+id/panel_pack_star"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:visibility="gone"
					app:srcCompat="@drawable/ic_star_border_24dp"/>

				<ImageView
					android:id="@+id/panel_pack_bookmark"
					android:layout_width="25dp"
					android:layout_toRightOf="@id/panel_pack_star"
					android:layout_height="25dp"
					app:srcCompat="@drawable/ic_bookmark_border_24dp"/>

				<ImageView
					android:id="@+id/panel_pack_edit"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_alignParentRight="true"
					app:srcCompat="@drawable/ic_edit_24dp"/>



			</RelativeLayout>

			<TextView
				android:id="@+id/panel_pack_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="marquee"
				android:focusable="true"
				android:marqueeRepeatLimit="marquee_forever"
				android:singleLine="true"
				android:text="UniPack Title"
				android:textSize="25dp" />

			<TextView
				android:id="@+id/panel_pack_subTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="marquee"
				android:focusable="true"
				android:marqueeRepeatLimit="marquee_forever"
				android:singleLine="true"
				android:text="UniPack subTitle"
				android:textSize="15dp" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:orientation="horizontal"
				android:paddingTop="32dp">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">


					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/scale" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/chainCount" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/sound_count" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/LED_count" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/fileSize" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/open_count" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/padtouch_count" />

				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:paddingLeft="64dp">

					<TextView
						android:id="@+id/panel_pack_scale"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0" />


					<TextView
						android:id="@+id/panel_pack_chainCount"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0" />

					<TextView
						android:id="@+id/panel_pack_soundCount"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0" />

					<TextView
						android:id="@+id/panel_pack_ledCount"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0" />

					<TextView
						android:id="@+id/panel_pack_fileSize"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

					<TextView
						android:id="@+id/panel_pack_openCount"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0" />

					<TextView
						android:id="@+id/panel_pack_padTouchCount"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0" />

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/panel_pack_youtube"
						android:layout_width="40dp"
						android:layout_height="40dp"
						app:srcCompat="@drawable/ic_youtube_24dp" />

					<ImageView
						android:id="@+id/panel_pack_website"
						android:layout_width="40dp"
						android:layout_height="40dp"
						app:srcCompat="@drawable/ic_web_24dp" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/panel_pack_func"
						android:layout_width="40dp"
						android:layout_height="40dp"
						app:srcCompat="@drawable/ic_functions_24dp" />

					<ImageView
						android:id="@+id/panel_pack_delete"
						android:layout_width="40dp"
						android:layout_height="40dp"
						app:srcCompat="@drawable/ic_delete_24dp" />
				</LinearLayout>


			</RelativeLayout>

			<TextView
				android:id="@+id/panel_pack_path"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="marquee"
				android:focusable="true"
				android:marqueeRepeatLimit="marquee_forever"
				android:singleLine="true"
				android:text="/storage/0/Unipad/"
				android:textSize="10dp" />

		</LinearLayout>

	</RelativeLayout>

</LinearLayout>