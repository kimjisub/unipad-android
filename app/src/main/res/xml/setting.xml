<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="@string/setting">
		<Preference
			android:key="select_theme"
			android:title="@string/select_theme" />

		<Preference
			android:key="storage_location"
			android:title="@string/storage_location"/>

	</PreferenceCategory>

	<PreferenceCategory android:title="@string/payment">
		<Preference
			android:key="donation"
			android:summary="@string/donation_"
			android:title="@string/donation" />
		<CheckBoxPreference
			android:key="pro"
			android:summary="@string/plan_pro_"
			android:title="@string/plan_pro" />
		<Preference
			android:key="restoreBilling"
			android:summary="@string/plan_restorePurchases_"
			android:title="@string/plan_restorePurchases" />
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/information">
		<Preference
			android:key="community"
			android:title="@string/community" />
		<Preference
			android:key="OpenSourceLicense"
			android:title="@string/openSourceLicense" />
		<Preference
			android:key="FCMToken"
			android:title="@string/FCMToken" />
		<Preference
			android:key="language"
			android:summary="@string/languageCode"
			android:title="@string/language" />
		<Preference
			android:key="copyright"
			android:title="@string/copyright" />
	</PreferenceCategory>
</PreferenceScreen>